generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model File {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  encrypted   Boolean  @default(false)
  userId      String   @db.ObjectId
  user        User?    @relation("UserFiles", fields: [userId], references: [id]) // Added relation name
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  username    String   @unique
  passwordHash String
  files       File[]   @relation("UserFiles") // Relation field to File
}

